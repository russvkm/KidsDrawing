<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackBarPurpose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/colorPalette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:contentDescription="@string/background_image" />

        <com.russvkm.kidsdrawing.DrawingStuff
            android:id="@+id/drawingStuff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/border_element" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/colorPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:contentDescription="@string/colorPalette"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/canvasContainer">

        <ImageButton
            android:id="@+id/violetColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/violet"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/violet" />

        <ImageButton
            android:id="@+id/indigoColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/indigo"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/indigo" />

        <ImageButton
            android:id="@+id/blueColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/blue"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/blue" />

        <ImageButton
            android:id="@+id/greenColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/green"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/green" />

        <ImageButton
            android:id="@+id/blackColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/black"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/black" />

        <ImageButton
            android:id="@+id/skinColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/skin"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/skin" />

        <ImageButton
            android:id="@+id/yellowColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/yellow"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/yellow" />

        <ImageButton
            android:id="@+id/orangeColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/orange"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/orange" />

        <ImageButton
            android:id="@+id/redColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/red"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/red" />


        <ImageButton
            android:id="@+id/whiteColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/white"
            android:contentDescription="@string/colorPalette"
            android:onClick="pickColor"
            android:src="@drawable/palette_normal"
            android:tag="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorPalette">

        <ImageButton
            android:id="@+id/galleryManager"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="7.5dp"
            android:background="@drawable/ic_attach_file"
            android:contentDescription="@string/brush_manager" />

        <ImageButton
            android:id="@+id/undoAction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginEnd="7.5dp"
            android:background="@drawable/ic_undo"
            android:contentDescription="@string/undo_action" />

        <ImageButton
            android:id="@+id/brushManager"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginEnd="7.5dp"
            android:background="@drawable/ic_brush"
            android:contentDescription="@string/brush_manager" />

        <ImageButton
            android:id="@+id/saveAction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7.5dp"
            android:background="@drawable/ic_save"
            android:contentDescription="@string/save_action" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>